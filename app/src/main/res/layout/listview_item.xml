<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_margin="5dp"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="115dp"
    android:maxHeight = "115dp">


    <TableRow>

        <LinearLayout android:gravity="right"
            android:layout_weight="1"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/lblJobNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="No: "                 />

                <TextView
                    android:id="@+id/tvJobNo"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"
                  />
            </LinearLayout>


        <TextView
            android:id="@+id/Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            />

        <TextView
            android:id="@+id/tvJobStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="follow-up"
            android:maxWidth="78dp"
            android:minWidth="78dp"/>
        </LinearLayout>
    </TableRow>
    <TableRow>
        <LinearLayout
            android:layout_column="0"
            android:layout_span="4"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start at: "/>
            <TextView
                android:id="@+id/tvJobStartDataTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvJobProblem"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:text="JobStartDataTime"
                />
        </LinearLayout>


    </TableRow>
    <TableRow>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problems: "
            android:layout_column="0"/>
    </TableRow>
<TableRow android:layout_weight="1">
        <TextView
            android:layout_column="0"
            android:id="@+id/tvJobProblem"
            android:text="JobProblem"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tvJobNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="3"/>
</TableRow>





</TableLayout>